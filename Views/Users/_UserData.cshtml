@{
    @using SmartAdmin.Seed.Models.ManageViewModels
    @model IndexViewModel
}
<div class="modal-header alert alert-block alert-info">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×
    </button>
    @if (ViewData["Action"] == null)
    {
        <h6 class="modal-title alert-heading"><i class="fa fa-user-plus"></i> Thêm mới người dùng</h6>
    }
    else
    {
        <h6 class="modal-title alert-heading"><i class="fa fa-user"></i> Cập nhật người dùng: @Model.Username</h6>
    }

</div>
<form action="" id="order-form" class="smart-form no-padding" novalidate="novalidate">
    <div class="modal-body">
        <div class="row padding-5">
            <section class="col col-lg-12">
                <ul id="query-tab" class="nav nav-tabs bordered">
                    <li class="active">
                        <a href="#s1" data-toggle="tab"><i class="fa fa-fw fa-lg fa-user-o"></i> Thông tin người dùng </a>
                    </li>
                    <li>
                        <a href="#s2" data-toggle="tab"><i class="fa fa-fw fa-lg fa-key"></i> Vai trò </a>
                    </li>
                </ul>
                <div id="query-content" class="tab-content">
                    <div class="tab-pane fade active in padding-10 no-padding-bottom" id="s1">
                        <fieldset style="padding-top:0px;">
                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Họ và tên</label>
                                    <label class="input" asp-for="FullName">
                                        <i class="icon-append fa fa-user"></i>
                                        <input asp-for="FullName" type="text" name="name" placeholder="Nhập họ và tên">
                                    </label>

                                </section>

                            </div>
                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Phòng ban</label>
                                    <label class="input">
                                                                                
                                        <select style="width: 100%; height:30px" class="select2">
                                            <option value="AK">Phòng PTPM</option>
                                            <option value="HI">Phòng Dịch vụ</option>


                                        </select>
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Email</label>
                                    <label class="input" asp-for="Email">
                                        <i class="icon-append fa fa-envelope-o"></i>
                                        <input asp-for="Email" type="email" name="email" placeholder="E-mail">
                                    </label>
                                </section>
                            </div>

                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Số điện thoại</label>
                                    <label class="input" asp-for="PhoneNumber">
                                        <i class="icon-append fa fa-phone"></i>
                                        <input asp-for="PhoneNumber" type="tel" name="phone" placeholder="Nhập số điện thoại" data-mask="(999) 999-9999">
                                    </label>
                                </section>
                            </div>

                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Mật khẩu</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-key"></i>
                                        <input type="password" name="password" placeholder="Mật khẩu">
                                    </label>
                                </section>
                            </div>
                            <div class="row">
                                <section class="col col-lg-12">
                                    <label class="input">Mật khẩu (nhập lại)</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-key"></i>
                                        <input type="password" name="confirm" placeholder="Nhập lại mật khẩu">
                                    </label>
                                </section>
                            </div>
                        </fieldset>
                    </div>
                    <div class="tab-pane padding-10 fade" id="s2">
                        <div class="row">
                            <section class="col col-lg-12">
                                <label class="checkbox">
                                    <input type="checkbox" name="checkbox-inline" checked="checked">
                                    <i></i>Quản trị
                                </label>
                                <label class="checkbox">
                                    <input type="checkbox" name="checkbox-inline">
                                    <i></i>Trưởng ban biên tập
                                </label>
                                <label class="checkbox">
                                    <input type="checkbox" name="checkbox-inline" checked="checked">
                                    <i></i>Biên tập viên
                                </label>
                            </section>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        
    </div>
    <div class="modal-footer" style="padding: 20px;">
        <button type="button" class="btn btn-default" style="padding: 7px" data-dismiss="modal">
            <i class="fa fa-times"></i>
            Đóng
        </button>
        <button type="submit" class="btn btn-primary" style="padding: 7px">
            <i class="fa fa-save"></i>
            Cập nhật
        </button>
    </div>

</form>
