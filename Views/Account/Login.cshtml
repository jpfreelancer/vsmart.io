@using SmartAdmin.Seed.Configuration
@using SmartAdmin.Seed.Models
@using SmartAdmin.Seed.Models.AccountViewModels
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8 hidden-xs hidden-sm">
        <img src="~/img/Logo/logo.png" class="pull-left" alt="" style="width:200px">
        <div class="hero">

            <div class="pull-left login-desc-box-l">
                <h4 class="paragraph-header">Hệ thống thu thập, phân tích thông tin và mạng xã hội</h4>
                <div class="login-app-icons">
                    <a href="javascript:void(0);" class="btn btn-danger btn-sm">Tìm hiểu thêm</a>
                </div>

            </div>
            <img src="~/img/Logo/iot.png" class="pull-right" alt="" style="width: 80%;margin-top: 45px;">


        </div>
        
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <h5 class="about-heading">Giám sát theo chủ đề</h5>
                <p>
                    Thống kê số lượng tin bài theo từng chủ đề
                </p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <h5 class="about-heading">Tự động lấy tin </h5>
                <p>
                    Tin tức được tổng hợp từ hơn 10000 nguồn tin khác nhau.
                </p>
            </div>
        </div>

    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
        <div class="well no-padding">
            <form asp-controller="Account" asp-action="Login" id="login-form" class="smart-form client-form">
                <header>
                    Đăng nhập hệ thống
                </header>

                <fieldset>
                    <section>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    </section>
                    <section>
                        <label class="label">Tên tài khoản</label>
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            <input type="email" name="email" value="@SmartSettings.DemoUsername">
                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Nhập tài khoản</b>
                        </label>
                    </section>

                    <section>
                        <label class="label">Mật khẩu</label>
                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            <input type="password" name="password" value="@SmartSettings.DemoPassword">
                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Nhập mật khẩu</b>
                        </label>
                        <div class="note">
                            <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
                        </div>
                    </section>

                    <section>
                        <label class="checkbox">
                            <input type="checkbox" name="remember" checked="">
                            <i></i>Lưu đăng nhập
                        </label>
                    </section>
                </fieldset>
                <footer>
                    <button type="submit" class="btn btn-primary">
                        Đăng nhập
                    </button>
                </footer>
            </form>

        </div>
       

    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        runAllForms();

        $(function() {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules : {
                    email : {
                        required : true,
                        email : true
                    },
                    password : {
                        required : true,
                        minlength : 3,
                        maxlength : 20
                    }
                },

                // Messages for form validation
                messages : {
                    email : {
                        required : 'Please enter your email address',
                        email : 'Please enter a VALID email address'
                    },
                    password : {
                        required : 'Please enter your password'
                    }
                },

                // Do not change code below
                errorPlacement : function(error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}
